doctype html
html
  head
    title Log In
  body
    h1 Log In
    form(action="/login" method="POST")
      label(for="username") Username:
      input(type="text" name="username" required)
      br
      label(for="password") Password:
      input(type="password" name="password" required)
      br
      button(type="submit") Log In
